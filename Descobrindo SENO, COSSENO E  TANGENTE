import math
an = float(input('Digite o ângulo que você deseja: '))
seno = math.sin(math.radians(an))
cosseno = math.cos(math.radians(an))
tangente = math.tan(math.radians(an))
print('Com base no ângulo que você informou, o seno é:')
print('O ângulo de {:.0f}° tem o SENO de {:.2f}'.format(an,seno))
print('O ângulo de {:.0f}° tem o COSSENO de {:.2f}'.format(an, cosseno))
print('O ângulo de {:.0f}° tem a TANGENTE de {:.2f}'.format(an, tangente))
